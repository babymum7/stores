{
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 9
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "rules": {
    "comma-dangle": 0,
    "no-console": 0,
    "arrow-parens": 0,
    "consistent-return": 0,
    "global-require": 0,
    "func-names": [0, "as-needed"],
    "import/no-extraneous-dependencies": 0,
    "no-unused-vars": [
      1,
      {
        "argsIgnorePattern": "next"
      }
    ],
    "no-underscore-dangle": [
      2,
      {
        "allow": ["user", "_id", "profile", "_json"]
      }
    ]
  }
}
