extends layout

block content
	.inner
		h2 Top #{stores.length} Stores
		table.table
			thead
				tr
					td Photo
					td Ranking
					td Name
					td Reviews
					td Hearts
					td Stars
					td AvgRating
			tbody
				each store, i in stores
					tr
						td
							a(href=`/store/${store.slug}`)
								img(width=200 src=h.showPhoto(store.photo) alt=store.name)
						td(style="color:#cc0000") #{i + 1}
						td: a(href=`/store/${store.slug}` style="color:#0d47a1")= store.name
						td= store.reviews
						td= store.hearts
						td= store.rates
						td(style="color:#ffff00") #{Math.round(store.avgRates * 10) / 10} / 5