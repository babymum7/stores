extends layout

include mixins/_customControlForm
include mixins/_social

block content
	.inner
		form.form.text-center.z-depth-1(action="/login" method="POST")
			h2 Sign in
			input.mb-4(type="text" name="username" placeholder="Username")
			input.mb-4(type="password" name="password" placeholder="Password")
			.login-options.mb-4
				+customControlForm("loginFormRemember","remember","true","Remember me")
				p: a.blue-text(href="#forgotPassword") Forgot password?
			button.btn.btn-rounded.btn-block.rainy-ashville-gradient(type="submit") Sign in
			p or sign in with:
			+social()
			p
				| Not a member?
				a.blue-text(href="/register")  Register
		form#forgotPassword.form.text-center.z-depth-1(action="/account/forgot" method="POST")
			h2 I forgot my password!
			input.mb-4(type="email" name="email" placeholder="E-mail")
			button.btn.btn-rounded.btn-block.purple-gradient(type="submit") Send a reset