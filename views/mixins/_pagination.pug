mixin pagination(page, pages, count, route="stores", tag)
	.pagination
		.pagination__prev
			if page > 1
				a(href=tag ? `/tag/${tag}?page=${page - 1}` : `/${route}?page=${page - 1}`) Prev
		.pagination__text
			p Page #{page} of #{pages} - #{count} total results
		.pagination__next
			if page < pages
				a(href=tag ? `/tag/${tag}?page=${parseFloat(page) + 1}` : `/${route}?page=${parseFloat(page) + 1}`) Next