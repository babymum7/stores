mixin review(review)
  .review__header
    .review__author
      img.avatar(src=review.author.picture ? `/images/pictures/${review.author.picture}` : (review.author.avatar || review.author.gravatar))
      p= review.author.name
    .review__stars(title=`Rated ${review.rating} our of 5 stars`)
      = '★'.repeat(review.rating)
      = '☆'.repeat(5 - review.rating)
    time.review__time(datetime=review.created)= h.moment(review.created).fromNow()
  .review__body
    p= review.text
