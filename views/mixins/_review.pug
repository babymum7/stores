mixin review(review)
	.review__header
		.review__author
			img.avatar(src=review.author.avatar)
			p= review.author.name
		if review.author.rating
			.review__stars(title=`Rated ${review.author.rating} our of 5 stars`)
				= '★'.repeat(review.author.rating)
				= '☆'.repeat(5 - review.author.rating)
		time.review__time(datetime=review.created)= h.moment(review.created).fromNow()
	.review__body
		p= review.text
